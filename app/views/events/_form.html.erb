<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number_of_seats %>
    <%= f.text_field :number_of_seats %><br>
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %><br>
    <%= f.label :restaurant_name %>
    <%= f.text_field :restaurant_name %><br>
    <%= f.label :region %>
    <%= f.text_field :region %><br>
    <%= f.label :event_time %>
    <%= f.datetime_local_field :event_time %><br>    
    <%= f.label :RSVP_deadline %>
    <%= f.date_field :RSVP_deadline %><br>
    <p>Please describe this event:</p>
    <%= f.text_area(:description, size: "50x3") %><br />
  </div>
  <%= f.hidden_field :user_id, value: @host.id %>
  <%= f.hidden_field :amount, value: 1 %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
